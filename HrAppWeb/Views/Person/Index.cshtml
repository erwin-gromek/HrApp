@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Person List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Person" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> &nbsp; Add New Person
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Person Name
                </th>
                <th>
                    Person Surname
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var person in Model)
            {
                <tr>
                    <td width="30%">
                        @person.Name
                    </td>
                    <td width="30%">
                        @person.Surname
                    </td>
                    <td width="20%">
                        @person.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Person" asp-action="Edit" asp-route-id="@person.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Person" asp-action="Delete" asp-route-id="@person.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>